{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["lint", "check-env", "insert-superadmin", "generate-blog-data", "^build"],
            "outputs": ["./.next/**", "!./.next/cache/**", "./dist/**", "./build/**"],
            "inputs": ["$TURBO_DEFAULT$", "../../.env*"]
        },
        "start": {
            "dependsOn": ["build"],
            "persistent": true,
            "cache": false
        },
        "check-types": {
            "dependsOn": ["prisma:generate", "generate-blog-data", "^check-types"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "format": {
            "dependsOn": ["^format"]
        },
        "dev": {
            "dependsOn": ["check-env", "insert-superadmin", "generate-blog-data", "^dev"],
            "persistent": true,
            "cache": false
        },
        "prisma:generate": {
            "dependsOn": ["^prisma:generate"],
            "outputs": ["./src/generated/prisma/**"]
        },
        "check-env": {
            "dependsOn": ["^check-env"],
            "inputs": ["$TURBO_DEFAULT$", "../../.env*"]
        },
        "insert-superadmin": {
            "dependsOn": ["check-env", "prisma:generate", "^insert-superadmin"]
        },
        "generate-blog-data": {
            "dependsOn": ["^generate-blog-data"],
            "outputs": ["./src/data.ts"]
        }
    }
}
