{
    "name": "@seiseisai/tickets",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "opener http://localhost:3002/ && bun --env-file=../../.env next dev --turbopack --port 3002",
        "build": "bun --env-file=../../.env next build --turbopack",
        "start": "next start --port 3002",
        "lint": "cd ../../ && eslint ./apps/tickets --cache --cache-location ./node_modules/.cache/eslint/.eslintcache && stylelint \"./apps/tickets/src/**/*.(scss|less|css)\" --cache --cache-location ./node_modules/.cache/stylelint/.stylelintcache && prettier --cache --check ./apps/tickets",
        "format": "cd ../../ && eslint ./apps/tickets --fix --cache --cache-location ./node_modules/.cache/eslint/.eslintcache && stylelint \"./apps/tickets/src/**/*.(scss|less|css)\" --cache --cache-location ./node_modules/.cache/stylelint/.stylelintcache --fix && prettier --cache --write ./apps/tickets",
        "check-types": "next typegen && tsc --noEmit"
    },
    "dependencies": {
        "@seiseisai/database": "workspace:*",
        "@seiseisai/ui": "workspace:*",
        "@seiseisai/turnstile": "workspace:*",
        "@seiseisai/date": "workspace:*"
    }
}
