{
    "name": "seiseisai.com",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "deploy": "bun ./scripts/deploy.ts",
        "build": "turbo run build",
        "start": "turbo run start",
        "dev": "bun install && turbo run dev",
        "lint": "prettier --cache --check . \"./!(apps|packages)/**\" && turbo run lint",
        "format": "prettier --cache --write . \"./!(apps|packages)/**\" && turbo run format",
        "check-types": "turbo run check-types",
        "insert-superadmin": "turbo run insert-superadmin",
        "prisma:generate": "turbo run prisma:generate",
        "prisma:studio": "prisma studio --schema=./packages/database/prisma/schema.prisma",
        "prisma:db-push": "prisma db push --schema=./packages/database/prisma/schema.prisma",
        "prisma:db-pull": "prisma db pull --schema=./packages/database/prisma/schema.prisma",
        "update-deps": "bunx --bun npm-check-updates -u && bun install",
        "shadcn": "cd ./packages/ui && bun shadcn"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.1",
        "@next/third-parties": "^15.5.0",
        "@paralleldrive/cuid2": "^2.2.2",
        "@prisma/client": "^6.14.0",
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-navigation-menu": "^1.2.14",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-radio-group": "^1.3.8",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-tabs": "^1.1.13",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "gray-matter": "^4.0.3",
        "holy-loader": "^2.3.13",
        "jotai": "^2.13.1",
        "jsqr": "^1.4.0",
        "lottie-react": "^2.4.1",
        "lucide-react": "^0.541.0",
        "next": "^15.5.0",
        "next-auth": "^5.0.0-beta.29",
        "next-themes": "^0.4.6",
        "node-cron": "^4.2.1",
        "qrcode.react": "^4.2.0",
        "react": "^19.1.1",
        "react-day-picker": "^9.9.0",
        "react-dom": "^19.1.1",
        "react-hook-form": "^7.62.0",
        "react-markdown": "^10.1.0",
        "react-tweet": "^3.2.2",
        "remark-breaks": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "sass": "^1.90.0",
        "sharp": "^0.34.3",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.3.1",
        "zod": "^4.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.55.0",
        "@svgr/webpack": "^8.1.0",
        "@tailwindcss/postcss": "^4.1.12",
        "@types/node": "^24",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "autoprefixer": "^10.4.21",
        "babel-plugin-react-compiler": "^19.1.0-rc.2",
        "eslint": "^9",
        "eslint-config-next": "15.5.0",
        "eslint-plugin-better-tailwindcss": "^3.7.5",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "opener": "^1.5.2",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-preset-env": "^10.3.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "prisma": "^6.14.0",
        "shadcn": "^2.10.0",
        "stylelint": "^16.23.1",
        "stylelint-config-recess-order": "^7.2.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "turbo": "^2.5.6",
        "tw-animate-css": "^1.3.7",
        "typescript": "^5"
    },
    "packageManager": "bun@1.2.20",
    "engines": {
        "bun": "latest",
        "npm": "Don't use npm, use bun instead",
        "yarn": "Don't use yarn, use bun instead",
        "pnpm": "Don't use pnpm, use bun instead"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
