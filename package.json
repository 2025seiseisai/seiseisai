{
    "name": "seiseisai.com",
    "version": "0.1.0",
    "private": true,
    "browserslist": [
        "> 0.1% in JP",
        "not dead"
    ],
    "scripts": {
        "deploy": "bun ./scripts/deploy.ts",
        "build": "turbo run build",
        "start": "turbo run start",
        "dev:admin": "bun install && turbo run dev:admin",
        "dev:tickets": "bun install && turbo run dev:tickets",
        "lint": "prettier --cache --check \"./!(apps|packages)/**\" --ignore-unknown && turbo run lint",
        "format": "prettier --cache --write \"./!(apps|packages)/**\" --ignore-unknown && turbo run format",
        "check-types": "turbo run check-types",
        "check-env": "turbo run check-env",
        "insert-superadmin": "turbo run insert-superadmin",
        "prisma:generate": "turbo run prisma:generate",
        "prisma:studio": "prisma studio --schema=./packages/database/prisma/schema.prisma",
        "prisma:db-push": "prisma db push --schema=./packages/database/prisma/schema.prisma",
        "prisma:db-pull": "prisma db pull --schema=./packages/database/prisma/schema.prisma",
        "update-deps": "bunx --bun npm-check-updates -u && bun install"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "@next/third-parties": "^16.0.0",
        "@paralleldrive/cuid2": "^3.1.0",
        "@prisma/client": "^6.18.0",
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-navigation-menu": "^1.2.14",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-radio-group": "^1.3.8",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dayjs": "^1.11.18",
        "gray-matter": "^4.0.3",
        "holy-loader": "^2.3.13",
        "jotai": "^2.15.0",
        "jsqr": "^1.4.0",
        "lottie-react": "^2.4.1",
        "lucide-react": "^0.546.0",
        "next": "^16.0.0",
        "next-auth": "^5.0.0-beta.30",
        "next-themes": "^0.4.6",
        "node-cron": "^4.2.1",
        "qrcode.react": "^4.2.0",
        "react": "^19.2.0",
        "react-day-picker": "^9.11.1",
        "react-dom": "^19.2.0",
        "react-hook-form": "^7.65.0",
        "react-markdown": "^10.1.0",
        "react-tweet": "^3.2.2",
        "remark-breaks": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "sass": "^1.93.2",
        "sharp": "^0.34.4",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.3.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@playwright/test": "^1.56.1",
        "@svgr/webpack": "^8.1.0",
        "@tailwindcss/postcss": "^4.1.16",
        "@types/node": "^24.9.1",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "autoprefixer": "^10.4.21",
        "babel-plugin-react-compiler": "^1.0.0",
        "eslint": "^9.38.0",
        "eslint-config-next": "^16.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-better-tailwindcss": "^3.7.10",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "opener": "^1.5.2",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-preset-env": "^10.4.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "prisma": "^6.18.0",
        "shadcn": "^3.5.0",
        "stylelint": "^16.25.0",
        "stylelint-config-recess-order": "^7.4.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-no-unsupported-browser-features": "^8.0.5",
        "tailwindcss": "^4.1.16",
        "turbo": "^2.5.8",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3"
    },
    "packageManager": "bun@1.3.1",
    "engines": {
        "bun": "latest",
        "npm": "Don't use npm, use bun instead",
        "yarn": "Don't use yarn, use bun instead",
        "pnpm": "Don't use pnpm, use bun instead"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
